doctype html
html
  head
    <link href="https://fonts.googleapis.com/css?family=Abel|Play" rel="stylesheet">
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    link(rel="stylesheet" href="/css/main.css")
    block title
      title The Singing Siren Bookstore
  body.container
      .col-md-2
        img(src='/img/logo.png')
      .col-md-7
        h1 The Singing Siren Bookstore
        h4 Science Fiction and Fantasy Books
      .col-md-3
        h3.smSearchtxt Search Books
          form(action="/", method="get")
            .smSearchtxt
              input(type="text", name="search_query", placeholder="Search by Title")
            .smSearchtxt
              input(type="submit", value="find")
      .col-md-12
        ul.nav
          li
            a(href="/") Home
          li
            a(href="/books/new") Add a Book
      block content