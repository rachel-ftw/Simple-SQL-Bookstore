extends ../layout.pug

block title
  title New Book!
  
block content
  div
    form(action="/books", method="post")
      div
        input(type="title", name="book[title]", placeholder="Book Title")
      div
        input(type="text", name="book[authors][0][first_name]", placeholder="Author First Name")
      div
        input(type="text", name="book[authors][0][last_name]", placeholder="Author Last Name")
      div
        input(type="text", name="book[authors][1][first_name]", placeholder="Author First Name")
      div
        input(type="text", name="book[authors][1][last_name]", placeholder="Author Last Name")
      div
        select(name="book[genres]" multiple)
          for genre in genres 
            option(value=genre.id)=genre.genre
      div
        input(type="submit", value="Submit a book!" )