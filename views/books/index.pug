extends ../layout.pug

block title
  title All of our Books!
block content
  h3 Available Books
  div.spaceGiver
    table
      thead
        tr
          th ID
          th Title
      tbody
        for book in books
          tr
            td= book.id
            td
              a(href="/books/"+book.id)= book.title

  div
    if page > 1
      a(href="/books?page="+(page-1)) Prev
    a(href="/books?page="+(page+1)) Next
